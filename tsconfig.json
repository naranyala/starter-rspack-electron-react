{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es6", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "outDir": "./dist-ts",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"],
      "@/main/*": ["src/main/*"],
      "@/renderer/*": ["src/renderer/*"]
    }
  },
  "include": [
    "main.ts",
    "preload.ts",
    "rspack.config.ts",
    "rspack.config.cjs.ts",
    "scripts/**/*",
    "src/**/*",
    "src/main/handlers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "dist-ts"
  ]
}